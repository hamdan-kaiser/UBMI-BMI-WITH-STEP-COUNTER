<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorback"
    tools:context="com.example.hamdan.ubmi.testBMI">

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:fontFamily="casual"
        android:text="Please Fill The Required Field"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/submit"
        android:layout_alignRight="@+id/submit"
        android:layout_below="@+id/result"
        android:layout_marginTop="11dp"
        android:fontFamily="casual"
        android:text="Height"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"/>

    <EditText
        android:id="@+id/heightFeet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:fontFamily="casual"
        android:hint="in Feet"
        android:inputType="number"
        android:textColor="@color/colorPrimary"/>

    <EditText
        android:id="@+id/heightInches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/heightFeet"
        android:layout_alignRight="@+id/heightFeet"
        android:layout_below="@+id/heightFeet"
        android:ems="10"
        android:fontFamily="casual"
        android:hint="in Inches"
        android:inputType="number"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/submit"
        android:layout_alignRight="@+id/submit"
        android:layout_below="@+id/heightInches"
        android:layout_marginTop="16dp"
        android:fontFamily="casual"
        android:text="Weight"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"/>

    <EditText
        android:id="@+id/weightKgs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/heightInches"
        android:layout_alignStart="@+id/heightInches"
        android:layout_below="@+id/textView3"
        android:ems="10"
        android:fontFamily="casual"
        android:hint="in kg's"
        android:inputType="number"
        android:textColor="@color/colorPrimary"/>

    <Button
        android:id="@+id/submit"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/weightKgs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:background="@drawable/catagoryok01"
        android:fontFamily="casual"

        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:fontFamily="casual"
        android:text="Result"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"/>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/weightKgs"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        app:srcCompat="@drawable/testbmiweight" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/imageView6"
        android:layout_alignRight="@+id/imageView6"
        android:layout_alignTop="@+id/textView2"
        app:srcCompat="@drawable/testbmiheight" />
</RelativeLayout>
